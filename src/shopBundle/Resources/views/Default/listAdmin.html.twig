{% extends 'back.html.twig' %}
{% block core %}
    <section class="mainContent full-width clearfix productSection">
    <div class="container">
    <div class="row">
        {% for produit in produits  %}

            <div class="col-md-3 col-xs-6">
                <div class="box bg-color-4">
                    <div class="box-img border-color-4 text-center">
                        <a href="single-product.html">
                            <img src={{ asset('uploads/images/' ~ produit.image) }} alt="image" style="height: 200px;width: 200px" class="img-responsive">
                        </a>
                        <a data-toggle="modal" href=".html" class="btn-block"><i class="fa fa-eye" aria-hidden="true"></i>Quick View</a>
                    </div>
                    <div class="box-info">
                        <h4>{{produit.nom}}</h4>
                        <div class="price">
                            <span>{{produit.prix}}</span>
                        </div>
                        <a href={{ path('Delete_prod',{'id':produit.id}) }} >supprimer</a>
                        <a href={{ path('Update_prod',{'id':produit.id}) }} >Modifier</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}