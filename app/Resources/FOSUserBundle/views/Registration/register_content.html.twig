{% extends 'layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}
{% block core %}
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="panel panel-default formPanel">
            <div class="panel-heading bg-color-1 border-color-1">
                <h3 class="panel-title">Create  an account</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path( 'fos_user_registration_register') }}  " method="POST" role="form">
                    {{ form_row(form._token) }}
                    {{ form_widget(form2.type, {'attr': {'class': 'form-control' }}) }}
                    <div class="form-group formField">

                        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'username'|trans } }) }}
                        {{ form_errors(form.username) }}
                    </div>

                    <div class="form-group formField">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'E-Mail'|trans } }) }}
                        {{ form_errors(form.email) }}

                    </div>
                    <div class="form-group formField">
                        {{ form_widget(form.prenom, { 'attr': {'class': 'form-control', 'placeholder': 'Prenom'|trans } }) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    <div class="form-group formField">
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'|trans } }) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="form-group formField">
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'|trans } }) }}
                        {{ form_errors(form.plainPassword.first) }}



                    </div>
                    <div class="form-group formField">
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'password_confirmation'|trans } }) }}
                        {{ form_errors(form.plainPassword.second) }}

                    </div>

                    <div class="form-group formField">
                        <input type="submit" class="btn btn-primary btn-block bg-color-3 border-color-3" value="{{ 'registration.submit'|trans }}">
                    </div>
                    <div class="form-group formField">
                        <p class="help-block">Allready have an account? <a href="#">Log in</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>


{% endblock %}
